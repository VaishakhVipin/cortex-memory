# Billing Configuration
FREE_TIER_LIMIT=1000
STARTER_TIER_LIMIT=10000
PROFESSIONAL_TIER_LIMIT=100000
ENTERPRISE_TIER_LIMIT=1000000

# Cost per token (USD)
GEMINI_COST_PER_TOKEN=0.00002
CLAUDE_COST_PER_TOKEN=0.000015
OPENAI_COST_PER_TOKEN=0.00003 